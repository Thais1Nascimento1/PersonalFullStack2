<!doctype html>
<html>
<head>
    <title>What shows do you like?</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css?family=Limelight&display=swap" rel="stylesheet">
      <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span <i class="fas fa-film"></i></span>Favorite shows</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!--
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
-->
        <div class="col-sm-6">
          <h3>Shows:</h3>
          <ul class="shows">
          <% for(var i=0; i<showsCollection.length; i++) {%>
            <li class="show">
              <span><%= showsCollection[i].showName %></span>
              <span>Liked by: <%= showsCollection[i].usersLiked %></span>
              <span><i class="fa fa-thumbs-up likeShow" name='<%= user.local.email %>' aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Submit a show</h2>
        <% if (user.local.email) { %>
          <form action="/shows" method="POST">
            <input placeholder="Type Show's Name" type="text" name="showName">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
